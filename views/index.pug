html
  head
    title Awesome
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="/bootstrap/css/bootstrap-theme.min.css")
    script(src="/static/js/jquery-2.1.4.min.js")
    //- script(src="/static/js/jquery.mobile-1.4.5.min.js")
    script(src="/bootstrap/js/bootstrap.min.js")
  body
    div.main
      div.container
          div#carousel-main.carousel.slide(data-ride="carousel")

            div.carousel-inner(role="listbox")
              each url, index in urls
                - var itemClass = (index == 0) ? 'active' : '';
                div.item(class=itemClass)
                  img(src=url)
                  //- div.carousel-caption Caption
            a.left.carousel-control(href="#carousel-main" role="button" data-slide="prev")
              span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
              span.sr-only Previous
            a.right.carousel-control(href="#carousel-main" role="button" data-slide="next")
              span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
              span.sr-only Next
