html
  head
    title Awesome
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
    link(rel="stylesheet" href="/bootstrap/css/bootstrap-theme.min.css")
    script(src="https://code.jquery.com/jquery-2.2.4.min.js")
    script(src="/bootstrap/js/bootstrap.min.js")
  body
    div.main
      div.container
          div#carousel-main.carousel.slide(data-ride="carousel")
            ol.carousel-indicators
              each url, index in urls
                - var liClass = (index == 0) ? 'active' : ''
                li(class=liClass data-target="#carousel-main" data-slide-to=index)
            div.carousel-inner(role="listbox")
              each url, index in urls
                - var itemClass = (index == 0) ? 'active' : '';
                div.item(class=itemClass)
                  img(src=url)
                  div.carousel-caption Caption
            a.left.carousel-control(href="#carousel-main" role="button" data-slide="prev")
              span.glyphicon.glyphicon-chevron-left(aria-hidden="true")
              span.sr-only Previous
            a.right.carousel-control(href="#carousel-main" role="button" data-slide="next")
              span.glyphicon.glyphicon-chevron-right(aria-hidden="true")
              span.sr-only Next

